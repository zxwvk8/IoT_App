<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeLY"
        >


        <TextView
            android:id="@+id/textViewReciev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone"
            />




        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/server_IP"

            app:bootstrapSize="lg"
            app:bootstrapBrand="info"
            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/portText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressText"
            android:layout_alignStart="@+id/addressText"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="9000"
            android:layout_marginTop="2dp"
            app:bootstrapSize="lg"
            app:bootstrapBrand="info"
            />




    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLY"
        android:layout_marginTop="24dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            >

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_volt_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전류센서 그래프"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:layout_marginHorizontal="20dp"
                android:onClick="forceCrash"
                />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_dust_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/dust_graph"
                android:onClick="forceCrash"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"

                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"

            >



            <TextView
                android:id="@+id/tv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공기청정기 자동"
                android:textColor="@android:color/black"
                android:textSize="18dp"/>


            <Switch
                android:id="@+id/airCleaner_switch"
                android:layout_width="20dp"
                android:layout_height="52dp"
                android:checked="false"
                android:textSize="18dp"

                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/start_AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:enabled="false"
                android:text="Start"
                android:onClick="forceCrash"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/stop_AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:enabled="false"
                android:text="Stop"
                android:onClick="forceCrash"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>